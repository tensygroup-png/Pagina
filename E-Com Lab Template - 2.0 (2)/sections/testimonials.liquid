<script>
  var mySwiper;

  // Funktion zur Initialisierung des Swipers ohne Loop im Theme Editor
  function initializeSwiper() {
    if (window.innerWidth > 768) { // Initialisiere Swiper nur auf Desktop-Geräten
      if (mySwiper) {
        mySwiper.destroy(true, true);  // Zerstört die bestehende Swiper-Instanz, um sie neu zu initialisieren
      }

      mySwiper = new Swiper('.swiper-container', {
        direction: 'horizontal',
        loop: !Shopify.designMode,  // Loop nur aktivieren, wenn NICHT im Theme-Editor
        slidesPerView: 3,  // Zeigt mehrere Slides gleichzeitig an
        spaceBetween: 30,
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
          enabled: {{ section.settings.autoplay | json }}  // Autoplay wird über Theme-Einstellungen gesteuert
        },
        breakpoints: {
          320: { slidesPerView: 1, spaceBetween: 10 },
          768: { slidesPerView: 2, spaceBetween: 20 },
          1024: { slidesPerView: 3, spaceBetween: 30 }
        }
      });
    }
  }

  // Funktion zur Neuinitialisierung des Swipers mit einer Verzögerung
  function delayedSwiperInit() {
    setTimeout(function() {
      initializeSwiper();
    }, 500);  // Verzögerung von 500ms, um sicherzustellen, dass alle Änderungen geladen sind
  }

  // Swiper beim Laden der Seite initialisieren
  document.addEventListener('DOMContentLoaded', function() {
    delayedSwiperInit();
  });

  // Neuinitialisierung des Swipers bei Fenstergrößenänderung
  window.addEventListener('resize', function() {
    delayedSwiperInit();
  });

  // Spezielle Handhabung für den Theme-Editor
  if (Shopify.designMode) {
    // Neuinitialisierung des Swipers bei Hinzufügen oder Entfernen von Blöcken
    $(document).on('shopify:block:load shopify:block:unload', function() {
      delayedSwiperInit();  // Swiper neu initialisieren bei Block-Änderungen
    });

    // Wenn ein Block ausgewählt wird, scrolle zu diesem Testimonial im Swiper
    $(document).on('shopify:block:select', function(event) {
      var selectedBlock = $(event.target).closest('.swiper-slide');  // Ermittelt die nächste swiper-slide für den ausgewählten Block
      var selectedIndex = selectedBlock.index();  // Ermittelt den Index des ausgewählten Blocks in swiper-slide

      // Statt zu einem bestimmten Slide zu wechseln, bleiben alle sichtbar
      if (selectedIndex !== -1) {
        mySwiper.slideTo(selectedIndex);  // Wechsel zu dem ausgewählten Slide, aber andere Slides bleiben sichtbar
      }
    });
  }
</script>

<div class="testimonial-container">
  <div>
    <h1 class="testimonial-heading-text">{{ section.settings.heading }}</h1>
  </div>

  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" id="testimonial-{{ block.id }}">
          <div class="testimonial-box" style="background-color: {{ block.settings.box_bg_color }};">
            <div class="testimonial-header">
              <span class="testimonial-stars">★★★★★</span> <!-- Hardcoded stars -->
              <span class="testimonial-quote" style="color: {{ section.settings.quote_color }};">❝</span> <!-- Quote icon with customizable color -->
            </div>
            <div class="testimonial-text">
              <h2 class="testimonial-title" style="color: {{ block.settings.rahulcolor }}; font-weight: {{ block.settings.slide_font_weight }}; font-size: {{ block.settings.slide_heading_font_size }}px;">
                {{ block.settings.slide_text }}
              </h2>
              <p class="testimonial-desc" style="font-size: {{ block.settings.desc_size }}px; color: {{ block.settings.desc_color }};">
                {{ block.settings.desc }}
              </p>
              <hr class="testimonial-divider"> <!-- Divider line between the text and author -->
              <div class="testimonial-author-wrapper">
                <div class="testimonial-author-info">
                  {% if block.settings.author_image %}
                    <img src="{{ block.settings.author_image | image_url: width: block.settings.author_image_size }}" alt="Author Image" class="testimonial-author-image-small" style="width: {{ block.settings.author_image_size }}px; height: {{ block.settings.author_image_size }}px;">
                  {% endif %}
                  <p class="testimonial-author">{{ block.settings.author_name }}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>

<style>
body {
    overflow-x: hidden;
}

.testimonial-container {
    padding: 40px;
    text-align: center;
    background-color: {{ section.settings.main_bg_color }};
}

.testimonial-heading-text {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_font_color }};
    font-weight: {{ section.settings.weight }};
    margin-bottom: 30px;
}

.swiper-container {
    width: 100%;
    padding: 50px 0;
}

.swiper-slide {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    padding: 20px; 
    box-sizing: border-box;
}

.testimonial-box {
    width: 100%;
    max-width: 300px;
    padding: 20px;
    border-radius: 15px;
    background-color: {{ block.settings.box_bg_color }};
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
}

.testimonial-box:hover {
    transform: translateY(-10px); 
    box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.15); 
}

.testimonial-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.testimonial-stars {
    color: #FFD700;
    font-size: 16px;
}

.testimonial-quote {
    font-size: 30px;
    color: {{ section.settings.quote_color }};
    position: absolute;
    top: 10px;
    right: 10px;
}

.testimonial-title {
    font-size: {{ block.settings.slide_heading_font_size }}px;
    color: {{ block.settings.rahulcolor }};
    font-weight: bold;
    margin-bottom: 10px;
}

.testimonial-desc {
    font-size: {{ block.settings.desc_size }}px;
    color: {{ block.settings.desc_color }};
    margin-bottom: 15px;
    line-height: 1.6;
}

.testimonial-divider {
    border: none;
    border-top: 1px solid #ddd; 
    margin: 15px 0;
    width: 100%;
}

.testimonial-author-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 10px;
}

.testimonial-author-info {
    display: flex;
    align-items: center;
    gap: 10px; /* Abstand zwischen Bild und Name */
}

.testimonial-author-image-small {
    width: 40px;  /* Größe des Bildes anpassen */
    height: 40px; /* Höhe des Bildes anpassen */
    border-radius: 50%;
}

.testimonial-author {
    font-style: italic;
    font-weight: bold;
    color: #666;
}

.swiper-pagination {
    position: relative;
    margin-top: 20px;
}

.swiper-container, .swiper-slide {
    overflow: visible;
}

.swiper-container {
    max-width: 100vw;
}

@media (max-width: 768px) {
    .swiper-slide {
        max-width: 100%;
    }

    .testimonial-box {
        max-width: 90%;
    }
}
</style>

