<section class="emoji-features-section" style="
    background-color: {{ section.settings.section_background_color }};
">
  <div class="emoji-features-container">
    <h2 style="color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h2>
    <div class="emoji-features-grid">
      {% for i in (1..section.settings.number_of_cards) %}
      <!-- Feature {{ i }} -->
      <div class="emoji-feature-item {% if section.settings.enable_glow %} glow {% endif %}" style="background-color: {{ section.settings.card_background_color }}; box-shadow: {% if section.settings.enable_glow %} 0 0 20px {{ section.settings.card_glow_color }}; {% endif %}">
        <div class="emoji-icon {% if section.settings.enable_emoji_glow %} emoji-glow {% endif %}" style="
            color: {{ section.settings.emoji_fill_color }};
            font-size: {{ section.settings.emoji_size }}px;
            text-shadow: {% if section.settings.enable_filter %} -1px -1px 0 {{ section.settings.emoji_outline_color }}, 1px -1px 0 {{ section.settings.emoji_outline_color }}, -1px 1px 0 {{ section.settings.emoji_outline_color }}, 1px 1px 0 {{ section.settings.emoji_outline_color }} {% endif %};
            text-shadow: {% if section.settings.enable_emoji_glow %} 0 0 15px {{ section.settings.emoji_glow_color }}; {% endif %}">
          {% assign emoji_key = 'emoji_' | append: i %}
          <span class="emoji">{{ section.settings[emoji_key] }}</span>
        </div>
        <h3 style="color: {{ section.settings.title_color }}; font-weight: {{ section.settings.title_font_weight }};">
          {% assign title_key = 'feature_title_' | append: i %}
          {{ section.settings[title_key] }}
        </h3>
        <p style="color: {{ section.settings.text_color }}; font-weight: {{ section.settings.text_font_weight }};">
          {% assign description_key = 'feature_description_' | append: i %}
          {{ section.settings[description_key] }}
        </p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .emoji-features-section {
    text-align: center;
    padding: 50px;
    background-color: #F1F5F9;
  }

  .emoji-features-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .emoji-features-grid {
    display: flex;
    justify-content: space-around;
    margin-top: 30px;
    flex-wrap: wrap;
  }

  .emoji-feature-item {
    width: 30%;
    background-color: #FFFFFF;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 20px;
    transition: transform 0.3s ease-in-out;
  }

  .emoji-feature-item:hover {
    transform: translateY(-10px);
  }

  .glow {
    box-shadow: 0 0 20px rgba(255, 255, 0, 0.7);
  }

  .emoji-icon {
    margin-bottom: 20px;
  }

  .emoji-glow {
    text-shadow: 0 0 15px rgba(255, 255, 0, 0.9);
  }

  /* Responsive for Mobile */
  @media (max-width: 768px) {
    .emoji-feature-item {
      width: 100%;
    }

    .emoji-features-grid {
      flex-direction: column;
      align-items: center;
    }

    .emoji-feature-item h3 {
      font-size: 20px;
    }

    .emoji-feature-item p {
      font-size: 14px;
    }

    .emoji-icon {
      font-size: 40px;
    }
  }
</style>

